<section>
    <div class="section-content">
        <div class="title-wrapper">
            <div class="slider-controls">
                <div class="prev-slide">P</div>
                <div class="next-slide">N</div>
            </div>
            <div class="collection-title">
                {{section.settings.collection-slider.title}}
            </div>
            
        </div>
        <div id="slider-container">
            <ul id="lnw-product-list">
                {% for product in section.settings.collection-slider.products %}
                  <li>
                      <div class="carousel-item">
                        <img src="{{ product.featured_image | image_url }}" alt="{{ product.title | escape }}" />
                        <div class="carousel-item-footer">
                            <div class="product-title">{{product.title}}</div>
                            <div class="product-title">{{product.price}}</div>
                        </div>
                      </div>
                  </li>
                  {% endfor %}
              </ul>
        </div>
    </div>
  </section>
  
  {% schema %}
  {
      "name": "LNW Collecion Slider",
      "settings": [{
          "id": "collection-slider",
          "label": "collection",
          "type": "collection"
      },
      {
        "type": "select",
        "id": "controls-position",
        "label": "Controls Position",
        "options": [
          {
            "value": "left",
            "label": "left"
          },
          {
            "value": "right",
            "label": "right"
          }
          
        ],
        "default": "left"
      }
      ],
      "presets": [{
          "name": "LNW Collection",
          "category": "LNW "
      }]
  }
  {% endschema %}
  
  {% stylesheet %}

  #slider-container{
    overflow-x:hidden;
    flex:3
  }

  .section-content {
    margin: 20px;
    display: flex;
    justify-content: start;
    align-items: center;
}

 /* the slides */
 .slick-slide {
    margin: 0 27px;
}

/* the parent */
.slick-list {
    margin: 0 -27px;
}

.slider-controls {
    display: flex;
    justify-content: center;
    flex-shrink: inherit;
    padding: 5px;
    border: 1px solid black;
    border-radius: 5px;
    align-self: flex-end;
    margin-right: 15px;
}

.slick-arrow {
    cursor: pointer;
    padding: 0px 5px;
}

.carousel-item-footer {
    display: flex;
    justify-content: space-between;
}

.title-wrapper {
    display: flex;
    flex: 1;
    flex-direction: column;
}
  {% endstylesheet %}
  
  {% javascript %}
  $('#lnw-product-list').slick({
    infinite: true,
    slidesToShow: 3,
    slidesToScroll: 1,
    arrows:true,
    prevArrow: $('.prev-slide'),
    nextArrow: $('.next-slide'),
    responsive: [
        {
            breakpoint: 600,
            settings: {
                slidesToShow: 1,
                slidesToScroll: 1,
            }
        }
    ]
});
  {% endjavascript %}