<section>
    <ul id="lnw-product-list">
      {% for product in section.settings.collection-slider.products %}
        <li>
            <img src="{{ product.featured_image | image_url }}" alt="{{ product.title | escape }}" />
        </li>
        {% endfor %}
    </ul>
  </section>
  
  {% schema %}
  {
      "name": "LNW Collecion Slider",
      "settings": [{
          "id": "collection-slider",
          "label": "collection",
          "type": "collection"
      }],
      "presets": [{
          "name": "LNW Collection",
          "category": "LNW "
      }]
  }
  {% endschema %}
  
  {% stylesheet %}
  {% endstylesheet %}
  
  {% javascript %}
  $('#lnw-product-list').slick({
    infinite: true,
    slidesToShow: 3,
    slidesToScroll: 1,
    dots: true,
    responsive: [
        {
            breakpoint: 600,
            settings: {
                slidesToShow: 1,
                slidesToScroll: 1,
            }
        }
    ]
});
  {% endjavascript %}