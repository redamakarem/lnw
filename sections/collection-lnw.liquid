<section>
    <div class="section-content">
        <div class="title-wrapper">
            <div class="collection-title">
                {{section.settings.collection-slider.title}}
            </div>
            <div class="slider-controls">
                <div class="prev-slide">P</div>
                <div class="next-slide">N</div>
            </div>
        </div>
        <div id="slider-container">
            <ul id="lnw-product-list">
                {% for product in section.settings.collection-slider.products %}
                  <li>
                      <img src="{{ product.featured_image | image_url }}" alt="{{ product.title | escape }}" />
                  </li>
                  {% endfor %}
              </ul>
        </div>
    </div>
  </section>
  
  {% schema %}
  {
      "name": "LNW Collecion Slider",
      "settings": [{
          "id": "collection-slider",
          "label": "collection",
          "type": "collection"
      }],
      "presets": [{
          "name": "LNW Collection",
          "category": "LNW "
      }]
  }
  {% endschema %}
  
  {% stylesheet %}

  #slider-container{
    overflow-x:hidden;
  }

  .section-content {
    margin: 20px;
    display: flex;
    justify-content: start;
    align-items: center;
}
  {% endstylesheet %}
  
  {% javascript %}
  $('#lnw-product-list').slick({
    infinite: true,
    slidesToShow: 3,
    slidesToScroll: 1,
    arrows:true,
    responsive: [
        {
            breakpoint: 600,
            settings: {
                slidesToShow: 1,
                slidesToScroll: 1,
            }
        }
    ]
});
  {% endjavascript %}