<section class="recommended-products">
    <div class="page-width">
        <div class="lnw-recommended-wrapper">
            <div class="lnw-recommended-image">
                <img src="{{section.settings.main-image | img_url}}" alt="">
            </div>
            <div class="lnw-recommended-products">
                <h3>{{ section.settings.heading }}</h3>
                <p class="recommended-desc">{{ section.settings.description }}</p>
                <div class="products-wrapper">
                    <div class="product">
                        <div class="product-collection">{{section.settings.product1.collections.first.title}}</div>
                        <div class="product-image"><img src="{{section.settings.product1.featured_image | img_url}}" alt=""></div>
                        <div class="product-footer">
                            <div class="product-name">{{section.settings.product1.title}}</div>
                            <div class="product-price">{{ section.settings.product1.price | money_with_currency }}</div>
                        </div>
                    </div>
                    <div class="product">
                        <div class="product-collection">{{section.settings.product2.collections[0].title}}</div>
                        <div class="product-image"><img src="{{section.settings.product2.featured_image | img_url}}" alt=""></div>
                        <div class="product-footer">
                            <div class="product-name">{{section.settings.product2.title}}</div>
                            <div class="product-price">{{ section.settings.product2.price | money_with_currency }}</div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Recommended products",
    "settings": [
        {
            "id": "lnw-recommended-products",
            "type": "text",
            "label": "Add a recommended products section"
        },
        {
            "id": "main-image",
            "type": "image_picker",
            "label": "Select an image"
        },
        {
            "id": "heading",
            "type": "text",
            "label": "Enter heading"
        },
        {
            "id": "description",
            "type": "text",
            "label": "Enter description"
        },
        {
            "id": "product1",
            "type": "product",
            "label": "Select a product"
        },
        {
            "id": "product2",
            "type": "product",
            "label": "Select a product"
        }
    ],
    "templates": ["index"],
    "presets": [
        {
            "name": "Recommended Products",
            "category": "LNW"
        }
    ]
}
{% endschema %}

{% javascript %}
  var owl = $('.blog-posts-track').owlCarousel({
    loop:true,
    margin:10,
    nav:true,
    responsive:{
        0:{
            items:1
        },
        600:{
            items:2
        },
        1000:{
            items:3
        },
        1600:{
            items:4
        }
    }
});

$(".card").flip();

  {% endjavascript %}

  {% stylesheet %}
    .lnw-recommended-wrapper {
    display: flex;
    }

    .lnw-recommended-image {
    flex: 1;
    }

    .lnw-recommended-products {
    flex: 1;
    padding:50px
    }

    .lnw-recommended-image img {
    width: 100%;
    }

    .products-wrapper {
        display: flex;
        justify-content: space-around;
    }
    .product-collection{
        text-transform:uppercase;
        color: rgba(20, 34, 45, 0.5);
    }

    .product-image img{
        width:270px;
        height:auto;
    }
    .product-footer {
        display: flex;
        justify-content: space-between;
    }
    .product-name{
    width: 100px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight: 600;
}
    
.product-price{
    color: rgba(20, 34, 45, 0.5);
}
  {% endstylesheet %}